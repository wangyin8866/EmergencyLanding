<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#FFA200"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/QR_code"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_launcher" />

            <include layout="@layout/bg_line_1" />


            <ImageView
                android:id="@+id/message_center"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <com.zyjr.emergencylending.custom.RoundImageViewByXfermode
            android:id="@+id/user_pic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/head_portrait"
            app:type="circle" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="15sp"
            android:text="*志刚 138****2122"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_data"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="个人资料"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View style="@style/horizontal_line_style" />

        <TextView
            android:id="@+id/my_borrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_loan"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="我的借款"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View style="@style/horizontal_line_style" />

        <TextView
            android:id="@+id/my_repayment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_repayment"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="我要还款"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View style="@style/horizontal_line_style" />

        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/icon_explain"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="帮助说明"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View style="@style/horizontal_line_style" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_set"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View style="@style/horizontal_line_style" />
    </LinearLayout>

</LinearLayout>