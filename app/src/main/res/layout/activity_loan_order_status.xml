<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zyjr.emergencylending.custom.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        app:drawableLeft="@mipmap/nav_back"
        app:drawableLeftVisibility="true"
        app:title="订单状态"
        app:titleTextColor="@color/input_text_color"
        app:titleTextSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/mine_center_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mine_center_bg">

                    <ImageView
                        android:id="@+id/iv_order_status"
                        android:layout_width="315dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@mipmap/orderprocess_a"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_order_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8.5dp"
                        android:text="填写资料"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_order_status1"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_toRightOf="@+id/tv_order_status1"
                        android:text="认证中"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_order_status1"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_toRightOf="@+id/tv_order_status2"
                        android:text="审核中"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_status4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_order_status1"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_toRightOf="@+id/tv_order_status3"
                        android:text="领取金额"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_status5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_order_status1"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="14.5dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_toRightOf="@+id/tv_order_status4"
                        android:text="领取金额"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_status6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_order_status"
                        android:layout_marginLeft="13.5dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_toRightOf="@+id/tv_order_status5"
                        android:text="还款中"
                        android:maxLines="2"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/bg_home_notice">

                <!-- 借款信息(继续借款) -->
                <include layout="@layout/layout_loan_apply_desc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_home_notice"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_order_status_icon"
                    android:layout_width="145dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="80dp"
                    android:src="@mipmap/emptypage_authentication" />

                <Button
                    android:id="@+id/btn_status_operate"
                    style="@style/button_orange"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="80dp"
                    android:text="马上领取"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>