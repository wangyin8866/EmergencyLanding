<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/my_top_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edit_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/my_icon_edit" />

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/head_portrait"
             />

        <TextView
            android:id="@+id/user_name_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="*志刚 138****2122"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_btn_45"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户经理"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_starts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_data"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="我的收入"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/message_center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_loan"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="消息中心"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/my_repayment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_repayment"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="邀请好友（敬请期待）"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/icon_explain"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="帮助说明"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@mipmap/my_icon_set"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5" />
    </LinearLayout>

</LinearLayout>