<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zyjr.emergencylending.custom.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        app:drawableLeft="@mipmap/nav_back"
        app:drawableLeftVisibility="true"
        app:title="个人信息"
        app:titleTextColor="@color/input_text_color"
        app:titleTextSize="16sp" />


    <ScrollView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/ll_idcard_front"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_idcard_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_launcher"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_idcard_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-18dp"
                        android:text="身份证正面" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_idcard_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_idcard_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_launcher"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_idcard_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-18dp"
                        android:text="身份证背面" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_idcard_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_idcard_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_launcher"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_idcard_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-18dp"
                        android:text="手持身份证" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/horizontal_line_style"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="姓名"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/et_personal_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请拍摄身份证进行识别"
                    android:maxLength="10"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/front_text_color_hint"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/horizontal_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="身份证"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/et_personal_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请拍摄身份证进行识别"
                    android:maxLength="18"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/horizontal_line_style"
                android:layout_height="5dp" />

            <!-- 婚姻状况 -->
            <LinearLayout
                android:id="@+id/ll_marriage_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minEms="6"
                    android:text="婚姻状况"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_marriage_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择婚姻状况"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/front_text_color_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_marriage_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <View style="@style/horizontal_line_style" />

            <LinearLayout
                android:id="@+id/ll_live_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minEms="6"
                    android:text="居住状况"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_live_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择居住状况"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/front_text_color_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_live_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <View
                style="@style/horizontal_line_style"
                android:layout_height="5dp" />

            <!-- 户籍地址 -->
            <LinearLayout
                android:id="@+id/ll_huji_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:focusable="true"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="户籍地址"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_huji_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择户籍地址"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/front_text_color_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_huji_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <View style="@style/horizontal_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="详细地址"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/et_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:hint="户籍详细地址"
                    android:maxLength="20"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/horizontal_line_style"
                android:layout_height="5dp" />

            <!-- 居住地 -->
            <LinearLayout
                android:id="@+id/ll_live_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="居住地"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_live_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择居住地址"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_live_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <View style="@style/horizontal_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:text="详细地址"
                    android:textColor="@color/input_text_color"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <com.zyjr.emergencylending.custom.ClearEditText
                    android:id="@+id/ed_live_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/transparent"
                    android:drawableRight="@mipmap/login_delete"
                    android:gravity="center_vertical"
                    android:hint="详细地址"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/front_text_color_hint"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_center_bg"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>