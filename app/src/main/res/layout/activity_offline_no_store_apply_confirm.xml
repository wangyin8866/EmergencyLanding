<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zyjr.emergencylending.custom.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        app:drawableLeft="@mipmap/icon_return"
        app:drawableLeftVisibility="true"
        app:title="申请确认"
        app:titleTextColor="@color/input_text_color"
        app:titleTextSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/top_bar"
        android:background="@color/line_color"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_no_store_support"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/emptypage_city" />

                <TextView
                    android:id="@+id/tv_no_store_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_no_store_support"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:text="未匹配到支持城市，我们为您以下产品" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_support_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:text="急速贷款"
                android:textColor="#474747"
                android:textSize="18sp" />


            <!-- 推荐贷款 -->
            <LinearLayout
                android:id="@+id/layout_store_supported"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_home_notice"
                android:orientation="vertical">

                <!-- 续贷 -->
                <include
                    android:id="@+id/ll_refinance"
                    layout="@layout/line_layout_loan_type"
                    android:visibility="gone" />

                <!-- 首贷 -->
                <include
                    android:id="@+id/ll_first_finance"
                    layout="@layout/layout_offline_loan_first_match" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_submit_apply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/mine_center_bg"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>


</RelativeLayout>