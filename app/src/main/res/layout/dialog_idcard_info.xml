<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_notice"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bank_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/tv_idcard_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:hint="请核实姓名是否有误"
                android:paddingLeft="12dp"
                android:textColor="@color/input_text_color"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_gap1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_idcard_name"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_idcard_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view_gap1"
                android:gravity="left|center"
                android:hint="请核实身份证号码是否有误"
                android:paddingLeft="12dp"
                android:textColor="@color/input_text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_gap2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_idcard_number"
                android:background="@color/line_color" />

            <EditText
                android:id="@+id/et_detail_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_gap2"
                android:background="@null"
                android:hint="请核实户籍地址是否有误"
                android:paddingLeft="12dp"
                android:scrollHorizontally="false"
                android:textColor="@color/input_text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_gap3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_detail_address"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_gap3"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="确定"
                    android:textColor="@color/single_pop_blue"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_scan_again"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="重新扫描"
                    android:textColor="@color/input_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_dismiss_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_close" />
    </RelativeLayout>

</LinearLayout>