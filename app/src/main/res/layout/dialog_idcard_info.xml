<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_idcard_root"
    android:layout_width="280dp"
    android:layout_height="240dp"
    android:background="@drawable/bg_home_notice">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_idcard_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:gravity="center|left"
            android:textColor="@color/input_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_idcard_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_idcard_name"
            android:layout_below="@+id/tv_idcard_name"
            android:layout_marginTop="6dp"
            android:gravity="left|center"
            android:maxLength="18"
            android:textColor="@color/input_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_detail_address"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/tv_idcard_number"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/textarea">

            <EditText
                android:id="@+id/et_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawablePadding="6dp"
                android:drawableRight="@mipmap/icon_write"
                android:textColor="@color/input_text_color"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view_divider_1"
            style="@style/horizontal_line_style"
            android:layout_below="@+id/layout_detail_address"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_scan_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="重新扫描"
                android:textColor="@color/input_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="确定"
                android:textColor="@color/single_pop_blue"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

