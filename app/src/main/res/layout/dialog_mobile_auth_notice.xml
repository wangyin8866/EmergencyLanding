<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="280dp"
    android:background="@drawable/bg_home_notice"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close_pop"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_close" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/icon_question"
        android:drawablePadding="5dp"
        android:text="产品匹配"
        android:textColor="@color/input_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8dp"
        android:text="手机服务密码是在运营商(中国移动、中国电信和中国联通)网站的登录密码，一般6位数字组成，个别省份是8位数字。如果您忘记服务密码，请先联系运营商重置密码或者在运营商官网自行重置。重置密码生效后方可进行手机认证，否则可能影响手机认证通过。"
        android:textColor="@color/front_text_color"
        android:textSize="14sp" />


</RelativeLayout>

