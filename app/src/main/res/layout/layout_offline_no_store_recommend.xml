<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:paddingTop="10dp"
    android:background="@drawable/bg_home_notice"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_pro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="急速借款"
            android:textColor="#474747"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_pro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="（网上签约，急速到账）"
            android:textColor="@color/front_text_color_hint"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        style="@style/horizontal_line_style"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_loan_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="500~5000元"
                android:textColor="#525252"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_loan_money"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="金额"
                android:textColor="@color/front_text_color_hint"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_loan_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="14天~15周"
                android:textColor="#525252"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_loan_period"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="周期"
                android:textColor="@color/front_text_color_hint"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_apply"
        style="@style/button_orange"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="立即申请"
        android:textSize="16sp" />

</LinearLayout>